{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/apps/api",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015"
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.ext-spec.ts",
    "**/*.k8s-spec.ts",
    "**/__mocks__/**/*.ts",
    "**/*.mock.ts"
  ],
  "include": ["**/*.ts"]
}
